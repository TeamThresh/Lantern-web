extends layout.pug

block title
	span.font-white(style='font-weight: 300;') Activity Map

block content
	div.col-xs-12.col-sm-12
		activity-map(ref='activityMap')
	div.col-xs-12.col-sm-12
		div.m-grid.m-grid-row
			div.m-grid-col.m-grid-col-xs-3.a
				user-connection-graph
			div.m-grid-col.m-grid-col-xs-4.a
				card(title='World Outbound Call' style='height: 378px;')
					worldmap-graph
			div.m-grid-col.m-grid-col-xs-5.a
				card(title='Top Error' style='height: 378px;')
					top-crash
block style
	style.
		.page-content > div {
			display: inline-block;
			vertical-align: top;
		}
		.a {
			padding: 0 7.5px;
		}
prepend script