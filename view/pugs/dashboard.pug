extends layout.pug

block title
	span.font-white(style='font-weight: 300;') Activity Map

block content
	div.col-xs-12.col-sm-12
		activity-map(ref='activityMap')
	div.col-xs-12.col-sm-12
		div.row
			div.col-xs-4
				card.col-xs-12.a(title='접속률')
					line-graph
				card.col-xs-12.a(title='복귀율')
					line-graph
			div.col-xs-4
				card(title='World Outbound Call')
					worldmap-graph
			div.col-xs-4
				card(title='Top Error')
					top-crash
block style
	style.
		.page-content > div {
			display: inline-block;
			vertical-align: top;
		}
		.a {
			display: inline-block; 
			float: none !important;
		}
prepend script