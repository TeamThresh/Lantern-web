extends layout-simple.pug

block content
	div.container
		div.row
			div.col-xs-12
				h4.title Get Started
		div.row
			portlet(simple='true')
				div.markdown.markdown-body
block style
	link(href='https://cdnjs.cloudflare.com/ajax/libs/github-markdown-css/2.6.0/github-markdown.min.css', rel='stylesheet', type='text/css')
	
block script
	script.
		$(document).on('ready', function() {
			$.get('https://raw.githubusercontent.com/TeamThresh/Lantern-sdk/master/README.md').then(res => {
				var text = new window.showdown.Converter().makeHtml(res);
				$('div.markdown').html(text);
			})
		});